<Window x:Class="EERIL.ControlSystem.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:coll="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="Dashboard" Height="472" Width="870" Closed="Window_Closed"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <StackPanel>
        <!--chartingToolkit:Chart x:Name="dashboardChart">
            <chartingToolkit:Chart.Series>
                <chartingToolkit:LineSeries Name="verticalAngleSeries" Title="Vertical Angle" DependentValuePath="Value"
                    IndependentValuePath="Key" ItemsSource="{Binding}"/>
                <chartingToolkit:LineSeries Name="horizontalAngleSeries" Title="Horizontal Angle" />
            </chartingToolkit:Chart.Series>
        </chartingToolkit:Chart-->
        <StackPanel Height="100" Name="ControllerPanel" Width="200">
            <StackPanel Name="statePanel" Width="200" Orientation="Horizontal">
                <Label Name="stateLabel" Content="State:" Height="28" />
                <Label Name="state" Content="Disconnected" Height="28" />
            </StackPanel>
        </StackPanel>
        <StackPanel Name="OffsetPanel" Width="250">
            <StackPanel Name="HeadingOffsetPanel" Orientation="Horizontal">
                <Label Content="Heading Offset:" Height="28" Width="105" />
                <Slider Height="23" Name="HeadingOffsetSlider" Width="145" Minimum="-5" Maximum="5" />
            </StackPanel>
            <StackPanel Name="TopFinOffsetPanel" Orientation="Horizontal">
                <Label Content="Top Fin Offset:" Height="28" Width="105" />
                <Slider Height="23" Name="TopFinOffsetSlider" Width="145" Minimum="0" Maximum="180" Value="90" />
            </StackPanel>
            <StackPanel Name="RightFinOffsetPanel" Orientation="Horizontal">
                <Label Content="Right Fin Offset:" Height="28" Width="105" />
                <Slider Height="23" Name="RightFinOffsetSlider" Width="145" Minimum="0" Maximum="180" Value="90" />
            </StackPanel>
            <StackPanel Name="BottomFinOffsetPanel" Orientation="Horizontal">
                <Label Content="Bottom Fin Offset:" Height="28" Width="105" />
                <Slider Height="23" Name="BottomFinOffsetSlider" Width="145" Minimum="0" Maximum="180" Value="90" />
            </StackPanel>
            <StackPanel Name="LeftFinOffsetPanel" Orientation="Horizontal">
                <Label Content="Left Fin Offset:" Height="28" Width="105" />
                <Slider Height="23" Name="LeftFinOffsetSlider" Width="145" Minimum="0" Maximum="180" Value="90" />
            </StackPanel>
        </StackPanel>
        <Button Height="23" Name="imuButton" Width="75" Content="IMU Off" Click="imuButton_Click" />
        <Label Name="serialDataLabel">Serial Data:</Label>
        <TextBox Name="serialData" VerticalAlignment="Stretch" Height="160" Width="847" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap" />
    </StackPanel>
</Window>